        {
            "type": "disk",
            "key": "   Disk     ",
            "keyColor": "cyan"
        },
        {
            "type": "battery",
            "key": "   Battery  ",
            "keyColor": "cyan"
        },
        {
            "type": "custom",
            "format": "{$1}",
            "outputColor": "separator"
        },
        "break",
        {
            "type": "colors",
            "paddingLeft": 15
        },
        {
